<div class="col-md-4">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.to_s %>
    <div class="card-body" data-id="<%= portfolio_item.id %>">
       <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
       </p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
           <%= link_to 'View', portfolio_show_path(portfolio_item), class: 'btn btn-primary my-2' %>
           <%= link_to 'Admin Only', edit_portfolio_path(portfolio_item), class: 'btn btn-secondary my-2' %>
           </div>
            <small class="text-muted">9 mins</small>
        </div>
    </div>
   </div>
 </div>
