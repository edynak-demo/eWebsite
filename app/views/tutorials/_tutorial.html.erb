<div class="tutorial-post">
  <h2 class="tutorial-post-title"><%= link_to tutorial.title.upcase, tutorial %></h2>
  <p class="tutorial-post-meta">Published <%= distance_of_time_in_words(tutorial.created_at, Time.now) %> ago</p>
  
  <% if logged_in?(:site_admin) %>
    <p class="tutorial-post-meta">
    <%= link_to tutorial.status, toggle_status_tutorial_path(tutorial) %> /
    <%= link_to 'Edit', edit_tutorial_path(tutorial) %> /
    <%= link_to 'Delete Post', tutorial, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
    </p>
  <% end %>

  <p>
    <%= tutorial.body %>
  </p>
</div>