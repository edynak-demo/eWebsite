<tr>
  <td><%= tutorial.title.upcase %></td>
  <td>Published <%= distance_of_time_in_words(tutorial.created_at, Time.now) %> ago</td>
  <td><%= tutorial.body %></td>
  <td><%= link_to tutorial.status, toggle_status_tutorial_path(tutorial) %></td>
  <td><%= link_to 'Show', tutorial %></td>
  <td><%= link_to 'Edit', edit_tutorial_path(tutorial) if logged_in?(:site_admin) %></td>
  <td><%= link_to 'Delete Post', tutorial, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></td>
</tr>
